{
  "ConnectionStrings": {
    "SchedulerDb": "Server=YOUR_SERVER;Port=3306;Database=YOUR_DATABASE;User Id=YOUR_USER;Password=YOUR_PASSWORD;SslMode=Required;ConnectionTimeout=30;DefaultCommandTimeout=300;"
  },
  "Scheduler": {
    "AdvanceDays": 90,
    "MonthlyMonthsAhead": 12,
    "DeleteBatchSize": 5000,
    "InsertBatchSize": 1000,
    "SleepBetweenBatchesMs": 100,
    "MaxDeadlockRetries": 5,
    "DeadlockRetryBaseDelayMs": 200,
    "TimeZone": "US/Eastern",
    "HistoryRetentionDays": 120,
    "AuditRetentionDays": 3
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/scheduler-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}
